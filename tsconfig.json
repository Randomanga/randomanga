{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "lib": ["es2017"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "rootDir": "src",
        "paths": {
            "@app/": ["./"],
            "@app/*": ["./*"],
            "@libs/*": ["./libs/*"]
        },
        "baseUrl": "src"
    },
    "exclude": ["node_modules", "**/*.spec.ts", "dist"],
    "include": ["src/**/*"]
}
